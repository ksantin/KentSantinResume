<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/opening_pg_gradient">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kentsantin.kentsantinresume.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kent Santin"
        android:id="@+id/myNameTextView"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#ededed" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@mipmap/kentimage"
        android:scaleType="centerCrop" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Professional Experience"
        android:id="@+id/profExpButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/button1_formatting"
        android:textColor="#e3e3e3"
        android:typeface="sans"
        android:drawableLeft="@drawable/briefcase_xs"
        android:paddingLeft="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Honors &amp; Awards"
        android:id="@+id/awardsButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/button1_formatting"
        android:textColor="#e3e3e3"
        android:typeface="sans"
        android:paddingLeft="15dp"
        android:drawableLeft="@drawable/medal_xs" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Education"
        android:id="@+id/educationButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/button1_formatting"
        android:textColor="#e3e3e3"
        android:typeface="sans"
        android:paddingLeft="15dp"
        android:drawableLeft="@drawable/mortarboard_x" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hobbiesButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/button1_formatting"
        android:textColor="#e3e3e3"
        android:typeface="sans"
        android:text="What I do for fun"
        android:paddingLeft="15dp"
        android:drawableLeft="@drawable/bicycle_xs" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Call Kent"
            android:id="@+id/callKentButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_weight="0.5"
            android:layout_marginRight="10dp"
            android:typeface="sans"
            android:textStyle="bold"
            android:backgroundTint="#6aba24"
            android:background="@drawable/button2_formatting" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email Kent"
            android:id="@+id/emailKentButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="10dp"
            android:typeface="sans"
            android:textStyle="bold"
            android:backgroundTint="#ec3005"
            android:background="@drawable/button2_formatting" />
    </LinearLayout>


</LinearLayout>
    </ScrollView>
